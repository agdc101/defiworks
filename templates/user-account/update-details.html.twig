{% extends 'base.html.twig' %}

{% block title %}DeFi Works - Update your details{% endblock %}

{% block body %}

    <section class="update-details">

        <h1>Update your details</h1>

        <p>Update your account details</p>

        <p>For any other account changes please contact <a maito="admin@defiworks.co.uk">admin@defiworks.co.uk</a></p>

        <div>
            {% for message in app.flashes('update_success') %}
            <div class="success-alert" role="alert">{{ message }}</div>
            {% endfor %}
            {{ form_start(updateUserForm) }}
                {{ form_row(updateUserForm.email) }}
                {{ form_row(updateUserForm.address) }}
                {{ form_row(updateUserForm.city) }}
                {{ form_row(updateUserForm.postCode) }}
                {{ form_row(updateUserForm.county) }}
                <button class="btn mb-5" type="submit">Update</button>
                <a href="{{ path('app_user_account') }}" class="back-btn mt-3"><i style="color:#8272e7;" class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
            {{ form_end(updateUserForm) }}
        </div>
    </section>
{% endblock %}