{% extends 'base.html.twig' %}

{% block title %}Hello UserAccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Update your details:</h1>

    {% for flash_error in app.flashes('update_success') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(updateUserForm) }}
        {{ form_row(updateUserForm.firstName) }}
        {{ form_row(updateUserForm.lastName) }}
        {{ form_row(updateUserForm.address) }}
        {{ form_row(updateUserForm.city) }}
        {{ form_row(updateUserForm.postCode) }}
        {{ form_row(updateUserForm.county) }}
        <button type="submit" class="btn">Update</button>
    {{ form_end(updateUserForm) }}

    <div class="account-options-wrapper">
        <a href="{{ path('app_dashboard') }}">Back</a>
        <a href="{{ path('app_forgot_password_request') }}">Reset your password</a>
        <a href="{{ path('app_close_user_account') }}">Close my account</a>
    </div>


</div>
{% endblock %}
