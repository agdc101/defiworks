{% extends 'base.html.twig' %}

{% block title %}Hello UserAccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h2>Account Management</h2>

    <h4>Update your details:</h4>

    {% for message in app.flashes('update_success') %}
        <div class="alert alert-danger" role="alert">{{ message }}</div>
    {% endfor %}
    <div>
        {{ form_start(updateUserForm) }}
            {{ form_row(updateUserForm.address) }}
            {{ form_row(updateUserForm.city) }}
            {{ form_row(updateUserForm.postCode) }}
            {{ form_row(updateUserForm.county) }}
            <button type="submit" class="btn">Update</button>
        {{ form_end(updateUserForm) }}
    </div>

    <div class="account-options-wrapper">
        <a href="{{ path('app_dashboard') }}">Back</a>
        <a href="{{ path('app_forgot_password_request') }}">Reset your password</a>
        <a href="{{ path('app_close_user_account') }}">Close my account</a>
    </div>

    <div>
        <p>Please contact us at admin@defiworks.co.uk for any other change requests.</p>
    </div>

</div>
{% endblock %}
