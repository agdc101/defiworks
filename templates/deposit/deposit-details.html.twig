{% extends 'base.html.twig' %}

{% block title %}DeFi Works- Deposit{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <div>
            <h1>Deposit Details:</h1>
            <div class="bank-details">
                <h4>Account Name : DeFi Works</h4>
                <p>Sort: 04-03-33</p>
                <p>Account No: 68972060</p>
            </div>
            <div id="usdConversion">
                <h3>Your amount to deposit is Â£{{gbpDeposit}}</h3>
                <p>Please press confirm button when deposit has been sent.</p>
            </div>
            <div>
                {{ form_start(AddPendingDepositForm) }}
                <button id="submit" type="submit">Confirm Deposit</button>
                {{ form_end(AddPendingDepositForm) }}
                <a href="{{ path('app_deposit') }}">Back</a>
            </div>
        </div>

    </div>

    <script>
       //disable button after click
        document.getElementById("submit").onclick = function() {
           //set timeout to allow form to submit
            setTimeout(function(){
                document.getElementById("submit").disabled = true;
            }, 100);
        };
    </script>
{% endblock %}