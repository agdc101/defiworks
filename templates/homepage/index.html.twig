{% extends 'base.html.twig' %}

{% block title %}DeFi Works{% endblock %}

{% block body %}

    <div class="homepage-wrapper">

        {% for message in app.flashes('account_closed') %}
            <div class="danger-alert" role="alert">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert user-success-msg" role="alert">{{ message }}</div>
        {% endfor %}

        <section class="hero">
            <div class="hero-content">
                <p class="title">Decentralised Finance, <strong>Streamlined</strong></p>
                <p>Strategy currently returning  {% if liveApy is defined %} {{ liveApy|round(2, 'floor') }}% {% else %} 4% {% endif %} APY</p>
                {% if app.user is not defined or not app.user %}
                    <button class="btn"><a href="{{ path('app_register') }}">Get Started</a></button>
                    <button class="btn"><a href="{{ path('app_login') }}">Login</a></button>
                {% endif %}
                <a class='hero-arrow' href="#intro"> 
                    <span>Explore</span> 
                    <svg id='arrow' viewBox="0 0 256 159" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M225.813 0L128 97.813L30.187 0L0 30.186L128 158.186L256 30.186L225.813 0Z" fill="#5d66e6"/>
                    </svg>
                </a>
            </div>
        </section>

        {% include 'partials/defi-intro.html.twig' %}

        {% include 'partials/blockchain-intro.html.twig' %}

        {% include  'partials/steps.html.twig' %}

        {% include 'partials/integrations.html.twig' %}

    </section>

    {% block javascripts %}
        {{ encore_entry_script_tags('main') }}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('particles') }}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

{% endblock %}
