{% extends 'base.html.twig' %}

{% block title %}Hello RootController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for flash_error in app.flashes('account_closed') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>De-Fi Works Homepage âœ…</h1>

    {% if app.user %}
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('app_register') }}">Register</a>
        <a href="{{ path('app_login') }}">Login</a>
    {% endif %}

    <p>Current strategy is yielding{% if apy is defined %} {{ apy|round(2, 'floor') }}% {% else %} 5% {% endif %}</p>


</div>
{% endblock %}
